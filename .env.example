# Supabase Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control

# ==========================================
# Supabase Backend Configuration
# ==========================================

# Your Supabase project URL (e.g., https://xxxxx.supabase.co)
SUPABASE_URL=your_supabase_project_url

# Your Supabase anonymous key (public key - safe to expose in client)
SUPABASE_ANON_KEY=your_supabase_anon_key

# Service role key (NEVER expose in client - only for server/Edge Functions)
# SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ==========================================
# OAuth Configuration
# ==========================================

# Google OAuth Web Client ID (for Google Sign-In)
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com

# Facebook App ID (for Facebook Login)
FACEBOOK_APP_ID=your_facebook_app_id

# ==========================================
# Push Notifications (OneSignal)
# ==========================================

# OneSignal App ID
ONESIGNAL_APP_ID=your_onesignal_app_id

# OneSignal REST API Key (for server-side operations)
# ONESIGNAL_API_KEY=your_onesignal_api_key

# ==========================================
# Firebase Configuration
# ==========================================

# Firebase configuration is loaded from google-services.json (Android)
# and GoogleService-Info.plist (iOS) files
# No environment variables needed for Firebase

# ==========================================
# Email Service (SendGrid) - For Edge Functions
# ==========================================

# SendGrid API Key (used in Supabase Edge Functions)
# SENDGRID_API_KEY=your_sendgrid_api_key

# ==========================================
# Environment
# ==========================================

# Current environment (development, staging, production)
ENVIRONMENT=development
